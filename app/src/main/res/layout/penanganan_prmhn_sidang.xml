<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="ifContentScrolls"
    tools:context=".penangananPrmhnSidangFrg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main">

        <LinearLayout
            android:id="@+id/permohonan_sidang_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_trans_rounded"
            android:layout_margin="15dp"
            android:padding="15dp">

            <TextView
                android:id="@+id/frm_tgl_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tgl-Trans"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/frm_no_tiket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Tiket"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/frm_paragraph1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:breakStrategy="balanced"
                android:text="Bersama ini  saya, mahasiswa/i Sekolah Tinggi Manajemen Informatika dan Komputer LIKMI :"
                android:textAppearance="?android:textAppearanceMedium" />

            <TableLayout
                android:id="@+id/mainGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="16"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <!-- ROW 1  -->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Lengkap"
                            android:textAppearance="?android:textAppearanceSmall" />

                        <TextView
                            android:id="@+id/frm_nama_lengkap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Lengkap"
                            android:textAppearance="?android:textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="NPM"
                            android:textAppearance="?android:textAppearanceSmall" />

                        <TextView
                            android:id="@+id/frm_npm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="NPM"
                            android:textAppearance="?android:textAppearanceMedium" />
                    </LinearLayout>

                </TableRow>

                <!-- ROW 2  -->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tempat, Tanggal Lahir"
                            android:textAppearance="?android:textAppearanceSmall"
                            />

                        <TextView
                            android:id="@+id/frm_ttl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tempat, Tanggal Lahir"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:inputType="textMultiLine"
                            android:lines="2" />

                    </LinearLayout>
                </TableRow>

                <!-- ROW 3  -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alamat di Bandung"
                            android:textAppearance="?android:textAppearanceSmall"
                            />

                        <TextView
                            android:id="@+id/frm_alamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alamat di Bandung"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:inputType="textMultiLine"
                            android:lines="2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kode Pos"
                            android:textAppearance="?android:textAppearanceSmall"
                            />

                        <TextView
                            android:id="@+id/frm_kode_pos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kode Pos"
                            android:textAppearance="?android:textAppearanceMedium"/>

                    </LinearLayout>

                </TableRow>

                <!-- ROW 4  -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nomor Telepon"
                            android:textAppearance="?android:textAppearanceSmall"
                            />

                        <TextView
                            android:id="@+id/frm_no_telp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nomor Telepon"
                            android:textAppearance="?android:textAppearanceMedium"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nomor Handphone"
                            android:textAppearance="?android:textAppearanceSmall"
                            />

                        <TextView
                            android:id="@+id/frm_no_handphone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nomor Handphone"
                            android:textAppearance="?android:textAppearanceMedium"/>

                    </LinearLayout>

                </TableRow>

                <!-- ROW 5  -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Program"
                            android:textAppearance="?android:textAppearanceSmall" />

                        <TextView
                            android:id="@+id/frm_program"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Program"
                            android:textAppearance="?android:textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textAppearance="?android:textAppearanceSmall"
                            />

                        <TextView
                            android:id="@+id/frm_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textAppearance="?android:textAppearanceMedium"/>

                    </LinearLayout>

                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jurusan"
                    android:textAppearance="?android:textAppearanceSmall" />

                <TextView
                    android:id="@+id/frm_jurusan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jurusan"
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bidang Minat"
                    android:textAppearance="?android:textAppearanceSmall" />

                <TextView
                    android:id="@+id/frm_bidang_minat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bidang Minat"
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Judul Tugas AKhir"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

                <TextView
                    android:id="@+id/frm_judul_TA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:text="Judul Tugas Akhir"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Perusahaan"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

                <TextView
                    android:id="@+id/frm_nama_prs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:text="Nama Perusahaan"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat Perusahaan"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

                <TextView
                    android:id="@+id/frm_alamat_prs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:text="Alamat Perusahaan"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pembimbing"
                    android:textAppearance="?android:textAppearanceSmall" />

                <TextView
                    android:id="@+id/frm_pembimbing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pembimbing"
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ko-Pembimbing"
                    android:textAppearance="?android:textAppearanceSmall" />

                <TextView
                    android:id="@+id/frm_kopembimbing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ko-Pembimbing"
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Semester"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

                <TextView
                    android:id="@+id/frm_semester"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="Semester" />

            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lampiran Tugas AKhir"
                    android:textAppearance="?android:textAppearanceSmall" />

                <TextView
                    android:id="@+id/frm_lmp_ta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lampiran Tugas AKhir"
                    android:textAppearance="?android:textAppearanceMedium" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/frm_downloadTA"
                    style="?android:textAppearanceMedium"
                    android:layout_width="wrap_content"
