<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".penangananUjianFrg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main">

        <LinearLayout
            android:id="@+id/ujian_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_trans_rounded"
            android:layout_margin="15dp"
            android:padding="15dp">

            <TextView
                android:id="@+id/frm_tgl_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tgl-Trans"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/frm_no_tiket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Tiket"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/frm_npm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="NPM" />

            <TextView
                android:id="@+id/frm_nama_lengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Nama Lengkap" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

                <TextView
                    android:id="@+id/frm_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="Status" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

                <TextView
                    android:id="@+id/frm_jenis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="Jenis" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Semester"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

                <TextView
                    android:id="@+id/frm_semester"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="Semester" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Awal"
                        android:textAppearance="?android:textAppearanceSmall"/>

                    <TextView
                        android:id="@+id/frm_tgl_awal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="Tanggal Awal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Akhir"
                        android:textAppearance="?android:textAppearanceSmall"/>

                    <TextView
                        android:id="@+id/frm_tgl_akhir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="Tanggal Akhir"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keterangan"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

                <TextView
                    android:id="@+id/frm_keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:text="Keterangan"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="List Mata Kuliah"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TableLayout
                        android:id="@+id/frm_tabel_matkul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:stretchColumns="*">

                        <TableRow
                            android:id="@+id/frm_header_matkul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <android.support.v4.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:fillViewport="true">

                            <TableLayout
                                android:id="@+id/frm_data_matkul"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="0dp"
                                android:stretchColumns="*"/>

                        </android.support.v4.widget.NestedScrollView>
                    </TableLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Riwayat"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

                <TextView
                    android:id="@+id/frm_riwayat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:text="Riwayat"/>

            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aksi"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/frm_aksi_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/frm_submit"
                    style="?android:textAppearanceMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="Submit"
                    android:theme="@style/StyledButton" />


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/frm_cancel"
                    style="?android:textAppearanceMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="Cancel"
                    android:theme="@style/StyledButton" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>