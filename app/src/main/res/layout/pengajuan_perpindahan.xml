<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="ifContentScrolls"
    tools:context=".pengajuanPerpindahanFrg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main">

        <LinearLayout
            android:id="@+id/perpindahan_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:overScrollMode="ifContentScrolls"
            android:background="@drawable/bg_trans_rounded"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:weightSum="20">

            <TextView
                android:id="@+id/frm_tgl_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tgl-Trans"
                android:textAppearance="?android:textAppearanceMedium" />

            <!--<TextView
                android:id="@+id/frm_no_tiket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No Tiket"
                android:textAppearance="?android:textAppearanceMedium" />-->

            <android.support.v7.widget.GridLayout
                android:id="@+id/mainGrid"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_weight="16"
                app:alignmentMode="alignMargins"
                app:columnCount="2"
                app:columnOrderPreserved="false"
                app:rowCount="4">

                <!-- ROW 1  -->
                <!-- COLUMN 1  -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kelas Awal"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <TextView
                        android:id="@+id/frm_kelas_awal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kelas Awal"
                        android:textAppearance="?android:textAppearanceMedium" />
                </LinearLayout>

                <!-- ROW 1  -->
                <!-- COLUMN 2  -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kelas Akhir"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/frm_kelas_akhir_spinner"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog" />
                </LinearLayout>

                <!-- ROW 2  -->
                <!-- COLUMN 1  -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenjang Awal"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <TextView
                        android:id="@+id/frm_jenjang_awal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenjang Awal"
                        android:textAppearance="?android:textAppearanceMedium" />
                </LinearLayout>

                <!-- ROW 2  -->
                <!-- COLUMN 2  -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenjang Akhir"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/frm_jenjang_akhir_spinner"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog" />
                </LinearLayout>

                <!-- ROW 3  -->
                <!-- COLUMN 1  -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jurusan Awal"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <TextView
                        android:id="@+id/frm_jurusan_awal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jurusan Awal"
                        android:textAppearance="?android:textAppearanceMedium" />
                </LinearLayout>

                <!-- ROW 3  -->
                <!-- COLUMN 2  -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jurusan Akhir"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/frm_jurusan_akhir_spinner"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog" />
                </LinearLayout>

                <!-- ROW 4  -->
                <!-- COLUMN 1  -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bidang Awal"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <TextView
                        android:id="@+id/frm_bidang_awal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bidang Awal"
                        android:textAppearance="?android:textAppearanceMedium" />
                </LinearLayout>

                <!-- ROW 4  -->
                <!-- COLUMN 2  -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bidang Akhir"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/frm_bidang_akhir_spinner"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog" />
                </LinearLayout>

                <!-- ROW 5  -->
                <!-- COLUMN 1  -->

                <!--<LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lampiran 1"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/frm_lampiran1"
                        style="?android:textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Lampiran 1"
                        android:theme="@style/StyledButton" />
                </LinearLayout>-->

                <!-- ROW 5  -->
                <!-- COLUMN 2  -->

                <!--<LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lampiran 2"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/frm_lampiran2"
                        style="?android:textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Lampiran 2"
                        android:theme="@style/StyledButton" />
                </LinearLayout>-->

            </android.support.v7.widget.GridLayout>

            <LinearLayout
                android:id="@+id/frm_lampiran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lampiran Surat Keterangan Orang tua"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingTop="8dp"
                    android:orientation="horizontal"
                    >

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/frm_browseSKOT"
                        style="?android:textAppearanceMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Browse"
                        android:padding="12dp"
                        android:theme="@style/StyledButton"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/frm_uploadSKOT"
                        style="?android:textAppearanceMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Upload"
                        android:padding="12dp"
                        android:theme="@style/StyledButton"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/frm_imgViewSKOT"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>


                <TextView
                    android:id="@+id/frm_nameFileSKOT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textAppearance="?android:textAppearanceSmall"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frm_lampiran2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lampiran Surat Keterangan Kerja"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingTop="8dp"
                    android:orientation="horizontal"
                    >

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/frm_browseSKK"
                        style="?android:textAppearanceMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Browse"
                        android:padding="12dp"
                        android:theme="@style/StyledButton"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/frm_uploadSKK"
                        style="?android:textAppearanceMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Upload"
                        android:padding="12dp"
                        android:theme="@style/StyledButton"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/frm_imgViewSKK"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>


                <TextView
                    android:id="@+id/frm_nameFileSKK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textAppearance="?android:textAppearanceSmall"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Semester"
                    android:textAppearance="?android:textAppearanceSmall" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/frm_semester_spinner"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/frm_keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/frm_edit_ket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Keterangan"
                    android:inputType="textMultiLine"
                    android:lines="3" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/frm_submit"
                    style="?android:textAppearanceMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="Submit"
                    android:theme="@style/StyledButton" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/frm_cancel"
                    style="?android:textAppearanceMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="Cancel"
                    android:theme="@style/StyledButton" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>